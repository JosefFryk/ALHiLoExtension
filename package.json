{
	"name": "HiLo-case",
	"displayName": "HiLo-case",
	"description": "Converts text to correct case with use of reference list.",
	"version": "0.0.4",
	"publisher": "forey-apps",
	"repository": "https://github.com/JosefFryk/ALHiLoExtension",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [ 
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.toLowerCase",
		"onCommand:extension.correctCase",
		"onCommand:extension.addWordToList",
		"onCommand:extension.translateText"
	],
	"main": "./out/extension.js",
	"contributes": {
			"configuration": {
			"type": "object",
			"title": "Uppercase-Lowercase Settings",
			"properties": {
				"caseCorrector.referenceList": {
					"type": "object",
					"default": {
						"BEGIN": "begin", 
						"END": "end",
						"IF": "if",
						"ELSE": "else",
						"UNTIL": "until",
						"REPEAT": "repeat",
						"FINDSET": "Findset()",
						"NEXT": "Next()",
						"GET": "Get",
						"INSERT": "Insert()",
						"THEN": "then",
						"VAR": "var",
						"NOT": "not",
						"VALIDATE": "Validate",
						"MODIFY": "Modify()",
						"SETRANGE": "SetRange"
					},
					"description": "A list of words and their correct case. For example, {'FINDSET': 'Findset()'}."
				}
			}
		},
		"commands": [
			{
            "command": "extension.toLowerCase",
            "title": "Convert to Lowercase"
			},
			{
				"command": "extension.correctCase",
				"title": "Correct Case in Document"
			},
			{
				"command": "extension.addWordToList",
				"title": "Add Word to Reference List"
			},
			{
				"command": "extension.translateByAI",
				"title": "Translate by AI"
			}
		],
		"keybindings": [
    {
        "command": "extension.toLowerCase",
        "key": "ctrl+alt+l",
        "when": "editorTextFocus"
    },
	{
		"command": "extension.addWordToList",
		"key": "ctrl+alt+t",
		"when": "editorTextFocus"
	}

]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20",
		"@types/vscode": "^1.73.0",
		"eslint": "^9.13.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0"
	}
}
