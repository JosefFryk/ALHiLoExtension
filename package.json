{
	"name": "HiLo-case",
	"displayName": "HiLo-case",
	"description": "Converts text to correct case with use of reference list.",
	"version": "0.1.32",
	"publisher": "forey-apps",
	"repository": "https://github.com/JosefFryk/ALHiLoExtension",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:textCorrection.toLowerCase",
		"onCommand:textCorrection.correctCase",
		"onCommand:textCorrection.addWordToList",
		"onCommand:hiloTranslator.translateByAI",
		"onCommand:hiloTranslator.exportTranslationDictionary",
		"onCommand:hiloTranslator.exportTranslationToDB",
		"onCommand:hiloTranslator.applyCorrectionsFromCosmos",
		"onCommand:hiloTranslator.importExcelCorrections",
		"onCommand:hiloTranslator.applyExcelCorrections",
		"onCommand:hiloTranslator.translateSelection",
		"onCommand:hiloTranslator.setup",
		"onCommand:hiloTranslator.configStatus"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Hi-Lo configuration",
			"properties": {
				"caseCorrector.referenceList": {
					"type": "object",
					"default": {
						"begin": "begin",
						"end": "end",
						"if": "if",
						"else": "else",
						"until": "until",
						"repeat": "repeat",
						"FindSet()": "Findset()",
						"Next()": "Next()",
						"Get": "Get",
						"Insert()": "Insert()",
						"then": "then",
						"var": "var",
						"not": "not",
						"Validate": "Validate",
						"Modify()": "Modify()",
						"SetRange": "SetRange"
					},
					"description": "A list of words and their correct case. For example, {'FindSet()': 'Findset()'}."
				},
				"hiloTranslate.enableUpload": {
					"type": "boolean",
					"default": true,
					"description": "Enable automatic upload of translations.json to Azure Blob Storage after export."
				}
			}
		},
		"commands": [
			{
				"command": "textCorrection.toLowerCase",
				"title": "HiLo: Convert to Lowercase"
			},
			{
				"command": "textCorrection.correctCase",
				"title": "HiLo: Correct Case in Document"
			},
			{
				"command": "textCorrection.addWordToList",
				"title": "HiLo: Add Word to Reference List"
			},
			{
				"command": "hiloTranslator.translateByAI",
				"title": "HiLo: Translate by AI"
			},
			{
				"command": "hiloTranslator.exportTranslationDictionary",
				"title": "HiLo: Export Translations from XLIFF to JSON"
			},
			{
				"command": "hiloTranslator.exportTranslationToDB",
				"title": "HiLo: Export Translations to Azure Cosmos DB"
			},
			{
				"command": "hiloTranslator.applyCorrectionsFromCosmos",
				"title": "HiLo: Apply Corrections from Cosmos DB to XLIFF"
			},
			{
				"command": "hiloTranslator.importExcelCorrections",
				"title": "HiLo: Import Corrections from Excel"
			},
			{
				"command": "hiloTranslator.applyExcelCorrections",
				"title": "HiLo: Apply Excel Corrections to XLIFF"
			},
			{
				"command": "hiloTranslator.translateSelection",
				"title": "HiLo: Translate Selected Text with AI"
			},
			{
				"command": "hiloTranslator.setup",
				"title": "HiLo: Configure API Keys"
			},
			{
				"command": "hiloTranslator.configStatus",
				"title": "HiLo: Show Configuration Status"
			}
		],
		"keybindings": [
			{
				"command": "textCorrection.toLowerCase",
				"key": "ctrl+alt+l",
				"when": "editorTextFocus"
			},
			{
				"command": "textCorrection.addWordToList",
				"key": "ctrl+alt+t",
				"when": "editorTextFocus"
			},
			{
				"command": "hiloTranslator.translateSelection",
				"key": "alt+r",
				"when": "editorLangId == xml"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -watch -p ./",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^20",
		"@types/vscode": "^1.73.0",
		"eslint": "^9.13.0",
		"jest": "^30.2.0",
		"ts-jest": "^29.4.6",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0"
	},
	"dependencies": {
		"@azure/cosmos": "^4.3.0",
		"axios": "^1.9.0",
		"dotenv": "^16.5.0",
		"fast-xml-parser": "^5.2.1",
		"uuid": "^11.1.0",
		"xlsx": "^0.18.5"
	}
}
